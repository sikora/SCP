.page-header
  %h1 Detalhes Vaga

- if notice
  .alert
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    %strong= notice

%p
  %b Lotação
  = @vaga.lotacao.descricao
%p
  %b Cargo/Categoria
  = @vaga.cargo_categoria.cargo.nm_cargo
%p
  %b Qt vagas:
  = @vaga.qt_vagas
%p
  %b Lei
  = @vaga.lei.descricao if @vaga.lei

.form-actions
  = link_to 'Editar', edit_vaga_path(@vaga), :class => "btn btn-warning"
  = link_to 'Voltar', vagas_path, :class => "btn"
