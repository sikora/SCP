.page-header
  %h1 Órgãos
  
= link_to raw("<i class='icon-plus icon-white'></i> Novo"), new_orgao_path, :class => "btn btn-success"

%br
%br

%table{:class => "table table-striped"}
  %tr
    %th #
    %th Nome Órgão
    %th Lei
    %th Ação

  - @orgaos.each do |orgao|
    %tr
      %td= orgao.id
      %td= orgao.nm_orgao
      %td= orgao.lei.descricao if orgao.lei
      %td
        = link_to raw("<i class='icon-zoom-in icon-white'></i>"), orgao, :class => "btn btn-mini btn-info"
        = link_to raw("<i class='icon-pencil icon-white'></i>"), edit_orgao_path(orgao), :class => "btn btn-mini btn-warning"
        = link_to raw("<i class='icon-trash icon-white'></i>"), orgao, :confirm => 'Realmente deseja fazer essa operação?', :method => :delete, :class => "btn btn-mini btn-danger"

- if @orgaos.present?
  .pagination
    %ul
      %li{:class => "disabled"}
        %a= "Anterior"       
      %li{:class => "active"}
        %a= "1" 
      %li
        %a= "2"
      %li
        %a= "3"
      %li
        %a= "Posterior"
