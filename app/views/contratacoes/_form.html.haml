= simple_form_for(@contratacao) do |f|
  = f.error_notification

  .form-inputs
    .well
      = f.input :id_pessoa, label: 'Pessoa', collection: [], input_html: { url_ac: '/pessoas.json', label_ac: 'nmpessoa', val_ac: 'id', class: "autocomplete"}
      %button{:class => "btn btn-mini btn-success criar-pessoa-ajax", :style => "width:21em"}
        %i{:class => "icon-plus-sign icon-white"}
        Criar Pessoa

  .form-actions
    = f.button :submit, "Salvar", :class => "btn btn-success"
    = link_to 'Voltar', contratacoes_path, :class => "btn"
