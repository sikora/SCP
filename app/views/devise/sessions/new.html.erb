<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin"}) do |f| %>

    <h2 class="form-signin-heading">√Årea de Login</h2>
    <div class="form-inputs">
      <%= f.input :email, :required => false, :autofocus => true, :class => "input-block-level" %>
      <%= f.input :password, :required => false, :class => "input-block-level" %>
      <%= f.input :remember_me, :label => "Relembrar ",:as => :boolean if devise_mapping.rememberable? %>
    </div>
    
    <%= f.button :submit, "Entrar", :class => "btn btn-large btn-primary" %>

    <!-- <%= render "devise/shared/links" %> -->
<% end %>